# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DB_NAME=medio
DB_USER=medio
DB_PASSWORD=your_secure_database_password_here
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=5000
NODE_ENV=development

# JWT Secret - MUST be a secure random string (64+ characters)
# Generate with: node backend/src/scripts/generate-secrets.js
JWT_SECRET=your_secure_jwt_secret_here_minimum_64_characters_long

# Cookie Secret - MUST be a secure random string (64+ characters)
# Generate with: node backend/src/scripts/generate-secrets.js
COOKIE_SECRET=your_secure_cookie_secret_here_minimum_64_characters_long

# Frontend Configuration
FRONTEND_URL=http://localhost:3000