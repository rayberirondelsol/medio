# Medio Frontend Environment Variables
# Copy this file to .env.local and update with your values

# API Configuration
# IMPORTANT: Leave empty for proxy mode (recommended) or set to direct backend URL
# Proxy mode: REACT_APP_API_URL= (empty) - uses relative URLs through BFF proxy
# Direct mode: REACT_APP_API_URL=http://localhost:5000/api - bypasses proxy
REACT_APP_API_URL=

# Environment
REACT_APP_ENV=development
NODE_ENV=development

# Feature Flags
REACT_APP_ENABLE_NFC=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_DEBUG_MODE=false

# Build Configuration
GENERATE_SOURCEMAP=false

# BFF Proxy Configuration (for node server.js)
# Development: http://localhost:5000
# Docker: http://backend:5000
# Production: https://medio-backend.fly.dev
BACKEND_URL=http://localhost:5000
PORT=8080

# Sentry Configuration (optional - for production error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
