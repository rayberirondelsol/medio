# IONOS Deployment Environment Variables
# Copy this file to .env.ionos and fill in your values
# DO NOT commit .env.ionos to version control

# IONOS Account Settings
IONOS_SFTP_USERNAME=u123456789
IONOS_SFTP_HOST=access.ionos.com
IONOS_SFTP_PORT=22
IONOS_SSH_KEY_PATH=~/.ssh/id_rsa
IONOS_REMOTE_PATH=/public_html
IONOS_DOMAIN=your-domain.com

# Environment
DEPLOYMENT_ENV=production

# Optional: Basic Authentication (if needed)
BASIC_AUTH_ENABLED=false
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=secure-password

# Build Settings
NODE_VERSION=18.x
BUILD_COMMAND=npm run build
TEST_COMMAND=npm test -- --ci --coverage --watchAll=false